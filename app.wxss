/* 适老化设计规范 - 全局样式变量 */

/* 颜色系统 - 优化版 */
:root {
  /* 主色调 - 橙色系，温暖、活力 */
  --primary-color: #ff7800;
  --primary-dark: #e66a00;
  --primary-light: #ff9500;
  --primary-lighter: #ffb347;
  --primary-lightest: #fff3e0;
  --primary-alpha-5: rgba(255, 120, 0, 0.05);
  --primary-alpha-10: rgba(255, 120, 0, 0.1);
  --primary-alpha-20: rgba(255, 120, 0, 0.2);
  --primary-alpha-30: rgba(255, 120, 0, 0.3);
  
  /* 辅助色 */
  /* 成功 - 绿色系，安全、积极 */
  --success-color: #52c41a;
  --success-dark: #389e0d;
  --success-light: #73d13d;
  --success-lighter: #95de64;
  --success-lightest: #f6ffed;
  --success-alpha-5: rgba(82, 196, 26, 0.05);
  --success-alpha-10: rgba(82, 196, 26, 0.1);
  --success-alpha-20: rgba(82, 196, 26, 0.2);
  
  /* 警告 - 橙黄色系，注意、提醒 */
  --warning-color: #faad14;
  --warning-dark: #d48806;
  --warning-light: #ffc53d;
  --warning-lighter: #ffe58f;
  --warning-lightest: #fffbe6;
  --warning-alpha-5: rgba(250, 173, 20, 0.05);
  --warning-alpha-10: rgba(250, 173, 20, 0.1);
  --warning-alpha-20: rgba(250, 173, 20, 0.2);
  
  /* 错误 - 红色系，危险、紧急 */
  --error-color: #f5222d;
  --error-dark: #cf1322;
  --error-light: #ff4d4f;
  --error-lighter: #ff7875;
  --error-lightest: #fff1f0;
  --error-alpha-5: rgba(245, 34, 45, 0.05);
  --error-alpha-10: rgba(245, 34, 45, 0.1);
  --error-alpha-20: rgba(245, 34, 45, 0.2);
  
  /* 信息 - 蓝色系，提示、说明 */
  --info-color: #1890ff;
  --info-dark: #096dd9;
  --info-light: #40a9ff;
  --info-lighter: #69c0ff;
  --info-lightest: #e6f7ff;
  --info-alpha-5: rgba(24, 144, 255, 0.05);
  --info-alpha-10: rgba(24, 144, 255, 0.1);
  --info-alpha-20: rgba(24, 144, 255, 0.2);
  
  /* 中性色 - 灰色系，背景、文字、边框 */
  /* 背景色 */
  --bg-primary: #ffffff;
  --bg-secondary: #f9fafb;
  --bg-tertiary: #f1f3f5;
  --bg-quaternary: #e9ecef;
  
  /* 文字颜色（高对比度，符合WCAG标准） */
  --text-primary: #1a1a1a; /* 主文字 - 对比度≥7:1 */
  --text-secondary: #404040; /* 次要文字 - 对比度≥4.5:1 */
  --text-tertiary: #666666; /* 辅助文字 - 对比度≥4.5:1 */
  --text-quaternary: #999999; /* 提示文字 - 对比度≥3:1 */
  --text-link: #1989fa; /* 链接文字 */
  
  /* 边框颜色 */
  --border-color: #d9d9d9;
  --border-light: #e8e8e8;
  --border-lighter: #f5f5f5;
  --border-dark: #bfbfbf;
  
  /* 阴影 - 多层次阴影，增强立体感 */
  --shadow-xs: 0 1rpx 2rpx rgba(0, 0, 0, 0.05);
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.10);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  --shadow-xl: 0 16rpx 48rpx rgba(0, 0, 0, 0.20);
  --shadow-2xl: 0 24rpx 72rpx rgba(0, 0, 0, 0.25);
  
  /* 过渡动画 - 平滑过渡，提升交互体验 */
  --transition-fast: 0.15s ease;
  --transition-base: 0.3s ease;
  --transition-slow: 0.5s ease;
  --transition-transform: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  --transition-all: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 字体系统（适老化优化版） */

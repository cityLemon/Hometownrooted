.text-tertiary { color: var(--text-tertiary); }
.text-link { color: var(--text-link); }

.bg-primary { background-color: var(--bg-primary); }
.bg-secondary { background-color: var(--bg-secondary); }
.bg-tertiary { background-color: var(--bg-tertiary); }

/* 容器样式 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 页面内容区域 */
.page-content {
  padding: 30rpx;
  background-color: var(--bg-secondary);
  min-height: 100vh;
}

/* 标题样式 */
.page-title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 30rpx;
  text-align: center;
}

/* 适老化特殊样式 */
.aging-friendly {
  /* 大点击区域 */
  min-height: 80rpx;
  min-width: 120rpx;
  
  /* 高对比度 */
  color: var(--text-primary);
  background-color: var(--bg-primary);
  
  /* 清晰的边框 */
  border: 2rpx solid var(--border-color);
}

/* 语音导航按钮 */
.voice-nav-btn {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-lg);
  z-index: 999;
}

/* 紧急按钮样式 */
.emergency-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: var(--error-color);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-lg);
  font-size: 36rpx;
  font-weight: 700;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(245, 34, 45, 0.4);
  }
  70% {
    transform: scale(1.05);
    box-shadow: 0 0 0 60rpx rgba(245, 34, 45, 0);
  }
  100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(245, 34, 45, 0);
  }
}

/* 轮播图样式 */
.swiper-container {
  position: relative;
  width: 100%;
  overflow: hidden;
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
}

.swiper {
  width: 100%;
  height: 100%;
}

.swiper-item {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.swiper-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.swiper-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx 32rpx 32rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  color: white;
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.4;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 64rpx;
  color: var(--text-tertiary);
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid var(--border-light);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-right: 16rpx;
}

.loading-small {
  padding: 32rpx;
}

.loading-small .loading-spinner {
  width: 36rpx;
  height: 36rpx;
}

/* 加载占位符（骨架屏） */
.skeleton {
  background: linear-gradient(90deg, var(--bg-tertiary) 25%, var(--bg-quaternary) 50%, var(--bg-tertiary) 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: 8rpx;
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
  text-align: center;
  color: var(--text-tertiary);
}

.empty-state-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-state-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.empty-state-desc {
  font-size: 28rpx;
  color: var(--text-tertiary);
  line-height: 1.6;
}

/* 提示消息 */
.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.75);
  color: white;
  padding: 24rpx 40rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  z-index: 9999;
  animation: fadeInOut 2s ease;
  max-width: 80%;
  text-align: center;
  word-wrap: break-word;
}

.toast-success {
  background-color: rgba(82, 196, 26, 0.9);
}

.toast-error {
  background-color: rgba(245, 34, 45, 0.9);
}

.toast-warning {
  background-color: rgba(250, 173, 20, 0.9);
}

.toast-info {
  background-color: rgba(24, 144, 255, 0.9);
}

@keyframes fadeInOut {
  0% { opacity: 0; transform: translate(-50%, -50%) scale(0.9); }
  15% { opacity: 1; transform: translate(-50%, -50%) scale(1); }
  85% { opacity: 1; transform: translate(-50%, -50%) scale(1); }
  100% { opacity: 0; transform: translate(-50%, -50%) scale(0.9); }
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9998;
  animation: fadeIn 0.3s ease;
}

.modal {
  background-color: var(--bg-primary);
  border-radius: 20rpx;
  box-shadow: var(--shadow-xl);
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideUp {
  from { transform: translateY(50rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.modal-header {
  padding: 32rpx;
  border-bottom: 2rpx solid var(--border-light);
  text-align: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.modal-body {
  padding: 32rpx;
  max-height: 50vh;
  overflow-y: auto;
}

.modal-footer {
  padding: 24rpx 32rpx;
  border-top: 2rpx solid var(--border-light);
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

/* 响应式设计 - 多断点适配 */

/* 超小屏幕 (max-width: 320px) - 如 iPhone 5/SE */
@media (max-width: 320px) {
  .font-4xl { font-size: 56rpx; }
  .font-3xl { font-size: 48rpx; }
  .font-2xl { font-size: 40rpx; }
  .font-xl { font-size: 34rpx; }
  .font-lg { font-size: 32rpx; }
  .font-md { font-size: 30rpx; }
  .font-sm { font-size: 28rpx; }
  .font-xs { font-size: 26rpx; }
  
  .btn { padding: 18rpx 36rpx; font-size: 28rpx; min-height: 80rpx; min-width: 180rpx; }
  .btn-large { padding: 24rpx 64rpx; font-size: 32rpx; min-height: 96rpx; }
  .btn-small { padding: 16rpx 32rpx; font-size: 26rpx; min-height: 72rpx; }
  
  .card { padding: 20rpx; margin-bottom: 20rpx; }
  .card-header { padding: 20rpx 20rpx 0; margin-bottom: 16rpx; }
  .card-body { padding: 0 20rpx 20rpx; }
  .card-footer { padding: 16rpx 20rpx; margin-top: 16rpx; }
  
  .list-item { padding: 20rpx; min-height: 110rpx; }
  .list-item-divider { padding: 12rpx 20rpx; }
  
  .form-group { margin-bottom: 24rpx; }
  .form-item { margin-bottom: 16rpx; }
  .form-input { padding: 20rpx; font-size: 30rpx; }
  
  /* 通用间距 */
  .margin-xs { margin: 8rpx; }
  .margin-sm { margin: 16rpx; }
  .margin-md { margin: 24rpx; }
  .margin-lg { margin: 32rpx; }
  .margin-xl { margin: 40rpx; }
  
  /* 轮播图适配 */
  .swiper-container { border-radius: 12rpx; }
  .swiper-title { padding: 32rpx 24rpx 24rpx; font-size: 32rpx; }
}

/* 小屏幕 (max-width: 375px) - 如 iPhone 6/7/8/X */
@media (max-width: 375px) {
  .font-4xl { font-size: 60rpx; }
  .font-3xl { font-size: 52rpx; }
  .font-2xl { font-size: 44rpx; }
  .font-xl { font-size: 36rpx; }
  .font-lg { font-size: 34rpx; }
  
  .btn { padding: 20rpx 40rpx; font-size: 30rpx; min-height: 84rpx; }
  .card { padding: 24rpx; }
  .list-item { padding: 24rpx; }
}

/* 中等屏幕 (max-width: 414px) - 如 iPhone 8 Plus/XR/11 */
@media (max-width: 414px) {
  .font-4xl { font-size: 64rpx; }
  .font-3xl { font-size: 56rpx; }
  .font-2xl { font-size: 48rpx; }
  .font-xl { font-size: 38rpx; }
}

/* 大屏幕 (min-width: 768px) - 如 iPad/平板 */
@media (min-width: 768px) {
  .font-4xl { font-size: 76rpx; }
  .font-3xl { font-size: 68rpx; }
  .font-2xl { font-size: 60rpx; }
  .font-xl { font-size: 48rpx; }
  .font-lg { font-size: 40rpx; }
  .font-md { font-size: 36rpx; }
  .font-sm { font-size: 32rpx; }
  .font-xs { font-size: 28rpx; }
  
  .btn { padding: 28rpx 56rpx; font-size: 36rpx; min-height: 108rpx; min-width: 240rpx; border-radius: 16rpx; }
  .btn-large { padding: 36rpx 72rpx; font-size: 40rpx; min-height: 128rpx; border-radius: 20rpx; }
  .btn-small { padding: 24rpx 48rpx; font-size: 32rpx; min-height: 96rpx; }
  
  .card { padding: 40rpx; margin-bottom: 32rpx; border-radius: 20rpx; }
  .card-header { padding: 40rpx 40rpx 0; margin-bottom: 24rpx; }
  .card-body { padding: 0 40rpx 40rpx; }
  .card-footer { padding: 24rpx 40rpx; margin-top: 24rpx; }
  
  .list-item { padding: 36rpx; min-height: 140rpx; border-radius: 20rpx; }
  .list-item-divider { padding: 20rpx 36rpx; font-size: 32rpx; }
  
  .form-group { margin-bottom: 40rpx; }
  .form-item { margin-bottom: 24rpx; }
  .form-input { padding: 28rpx; font-size: 36rpx; border-radius: 12rpx; }
  
  /* 通用间距 */
  .margin-xs { margin: 12rpx; }
  .margin-sm { margin: 24rpx; }
  .margin-md { margin: 36rpx; }
  .margin-lg { margin: 48rpx; }
  .margin-xl { margin: 60rpx; }
  
  /* 轮播图适配 */
  .swiper-container { border-radius: 20rpx; max-width: 1200rpx; margin: 0 auto; }
  .swiper-title { padding: 48rpx 40rpx 32rpx; font-size: 44rpx; }
  
  /* 容器宽度限制 */
  .container { max-width: 1200rpx; margin: 0 auto; padding: 0 32rpx; }
}

/* 深色模式支持 - 完整优化版 */
@media (prefers-color-scheme: dark) {
  :root {
    /* 背景色 */
    --bg-primary: #1a1a1a;
    --bg-secondary: #262626;
    --bg-tertiary: #303030;
    --bg-quaternary: #3a3a3a;
    
    /* 文字颜色 */
    --text-primary: #ffffff;
    --text-secondary: #cccccc;
    --text-tertiary: #999999;
    --text-quaternary: #666666;
    --text-link: #40a9ff;
    
    /* 边框颜色 */
    --border-color: #404040;
    --border-light: #333333;
    --border-lighter: #3a3a3a;
    --border-dark: #4d4d4d;
    
    /* 主色调 */
    --primary-color: #40a9ff;
    --primary-dark: #1890ff;
    --primary-light: #69c0ff;
    --primary-lighter: #91d5ff;
    --primary-lightest: #e6f7ff;
    
    /* 辅助色 */
    --success-color: #73d13d;
    --warning-color: #ffc53d;
    --error-color: #ff4d4f;
    --info-color: #69c0ff;
    
    /* 阴影 */
    --shadow-xs: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
    --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.4);
    --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.5);
    --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.6);
    --shadow-xl: 0 16rpx 48rpx rgba(0, 0, 0, 0.7);
  }
}

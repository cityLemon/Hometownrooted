/* 按钮样式（适老化） */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  border-radius: 16rpx;
  transition: all var(--transition-base);
  border: none;
  outline: none;
  cursor: pointer;
  min-height: 88rpx; /* 增大点击区域 */
  min-width: 200rpx; /* 增大点击区域 */
  box-sizing: border-box;
  line-height: 1.4;
}

.btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none !important;
  background-color: var(--bg-tertiary) !important;
  color: var(--text-quaternary) !important;
  border-color: var(--border-light) !important;
  box-shadow: none !important;
}

.btn:disabled:active {
  opacity: 0.5 !important;
  transform: none !important;
}


/**index.wxss**/
/* -------------------
  全局变量与页面基础
-------------------- */
page {
  --primary-color: #2D64F0;
  --primary-light: #4A7BF6;
  --primary-lightest: #EEF2FF;
  --primary-dark: #1E50E0;
  --secondary-color: #5E72E4;
  --accent-color: #F5365C;
  --success-color: #2DCE89;
  --warning-color: #FB6340;
  --info-color: #11CDEF;
  
  --text-primary: #32325D;
  --text-secondary: #8898AA;
  --text-muted: #ADB5BD;
  
  --bg-primary: #FFFFFF;
  --bg-secondary: #F7F8FC;
  --bg-tertiary: #F4F5F7;
  
  --border-color: #E9ECEF;
  --divider-color: #F1F3F5;
  
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  --shadow-xl: 0 16rpx 48rpx rgba(0, 0, 0, 0.16);
  
  --radius-xs: 8rpx;
  --radius-sm: 12rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-full: 50%;
  
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  --spacing-xxl: 64rpx;
  
  --font-size-xs: 22rpx;
  --font-size-sm: 24rpx;
  --font-size-base: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-xxl: 44rpx;
  
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  
  --line-height-tight: 1.2;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.75;
  
  --transition-base: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  --transition-fast: all 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  background-color: var(--bg-secondary);
  color: var(--text-primary);
  height: 100vh;
  overflow-x: hidden;
}

/* 背景装饰元素 */
page::before {
  content: '';
  position: fixed;
  top: -10%;
  right: -10%;
  width: 50%;
  height: 50%;
  background: radial-gradient(circle, rgba(45, 100, 240, 0.05) 0%, rgba(45, 100, 240, 0) 70%);
  border-radius: 50%;
  z-index: -1;
  animation: float 20s ease-in-out infinite;
}

page::after {
  content: '';
  position: fixed;
  bottom: -15%;
  left: -15%;
  width: 60%;
  height: 60%;
  background: radial-gradient(circle, rgba(76, 175, 80, 0.05) 0%, rgba(76, 175, 80, 0) 70%);
  border-radius: 50%;
  z-index: -1;
  animation: float 15s ease-in-out infinite reverse;
}

/* 主要内容区域背景装饰 */
.main-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  background: linear-gradient(180deg, 
    rgba(45, 100, 240, 0.03) 0%, 
    rgba(45, 100, 240, 0.01) 50%, 
    rgba(45, 100, 240, 0) 100%);
  z-index: -1;
}

.main-content::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  height: 300rpx;
  background: radial-gradient(ellipse at bottom center, 
    rgba(45, 100, 240, 0.02) 0%, 
    rgba(45, 100, 240, 0) 70%);
  z-index: -1;
}

/* 页面装饰性几何图形 */
.bg-decoration {
  position: fixed;
  z-index: -1;
  opacity: 0.04;
  pointer-events: none;
}

.bg-decoration-1 {
  top: 15%;
  left: 5%;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
  animation: morph 15s ease-in-out infinite alternate;
}

.bg-decoration-2 {
  top: 40%;
  right: 8%;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, var(--secondary-color), var(--info-color));
  border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
  animation: morph 18s ease-in-out infinite alternate-reverse;
}

.bg-decoration-3 {
  bottom: 20%;
  left: 12%;
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, var(--info-color), var(--success-color));
  border-radius: 40% 60% 60% 40% / 70% 30% 70% 30%;
  animation: morph 20s ease-in-out infinite alternate;
}

/* 变形动画 */
@keyframes morph {
  0% {
    border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
    transform: rotate(0deg) scale(1);
  }
  50% {
    border-radius: 70% 30% 30% 70% / 70% 70% 30% 30%;
    transform: rotate(180deg) scale(1.1);
  }
  100% {
    border-radius: 40% 60% 60% 40% / 60% 40% 60% 40%;
    transform: rotate(360deg) scale(1);
  }
}

/* 动态点状装饰 */
.dot-pattern {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: 
    radial-gradient(circle at 25% 25%, rgba(45, 100, 240, 0.02) 0%, rgba(45, 100, 240, 0) 2%),
    radial-gradient(circle at 75% 75%, rgba(76, 175, 80, 0.02) 0%, rgba(76, 175, 80, 0) 2%),
    radial-gradient(circle at 50% 10%, rgba(17, 205, 239, 0.02) 0%, rgba(17, 205, 239, 0) 2%),
    radial-gradient(circle at 10% 80%, rgba(45, 100, 240, 0.02) 0%, rgba(45, 100, 240, 0) 2%),
    radial-gradient(circle at 90% 50%, rgba(76, 175, 80, 0.02) 0%, rgba(76, 175, 80, 0) 2%);
  background-size: 200rpx 200rpx, 250rpx 250rpx, 300rpx 300rpx, 350rpx 350rpx, 400rpx 400rpx;
  background-position: 0% 0%, 30% 30%, 60% 0%, 10% 70%, 80% 40%;
  background-repeat: repeat;
  z-index: -2;
  animation: movePattern 60s linear infinite;
}

/* 点状图案移动动画 */
@keyframes movePattern {
  0% {
    background-position: 0% 0%, 30% 30%, 60% 0%, 10% 70%, 80% 40%;
  }
  100% {
    background-position: 200rpx 200rpx, 230rpx 230rpx, 260rpx 200rpx, 210rpx 270rpx, 280rpx 240rpx;
  }
}

/* -------------------
  页面容器布局
-------------------- */
.status-bar-placeholder {
  height: 0; /* 移除状态栏占位 */
}

.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-primary);
}

.swiper-section {
  position: relative;
  width: 100%;
  flex-shrink: 0; /* 防止轮播图被压缩 */
  overflow: hidden;
}

.swiper-section::before {
  content: '';
  position: absolute;
  top: -20%;
  left: -10%;
  width: 120%;
  height: 140%;
  background: radial-gradient(circle at 30% 80%, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  pointer-events: none;
  z-index: 1;
}

/* -------------------
  轮播图样式
-------------------- */
.swiper-container {
  width: calc(100% - 60rpx); /* 左右各留30rpx间距 */
  height: 50vh;
  max-height: 500rpx;
  min-height: 400rpx;
  margin: 30rpx 30rpx 50rpx 30rpx; /* 增加底部边距 */
  overflow: visible; /* 改为visible确保箭头可见 */
  position: relative;
  border-radius: var(--radius-xl); /* 四角都圆角 */
  box-shadow: 0 15rpx 40rpx rgba(0, 0, 0, 0.15), 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
  z-index: 2; /* 确保在背景装饰之上 */
}

.swiper-container::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: var(--radius-xl);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  pointer-events: none;
}

/* 轮播图箭头样式 - 更精致的设计 */
.swiper-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 70rpx;
  height: 70rpx;
  background-color: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(6px);
  border: none;
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  box-shadow: none;
  transition: var(--transition-base);
}

.swiper-arrow-left {
  left: 20rpx; /* 修改为正值，确保箭头在容器内可见 */
}

.swiper-arrow-right {
  right: 20rpx; /* 修改为正值，确保箭头在容器内可见 */
}

.arrow-icon {
  font-size: 36rpx;
  font-weight: normal;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1;
  position: relative;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.arrow-icon::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: var(--radius-full);
  z-index: -1;
}

.swiper-arrow:active {
  transform: translateY(-50%) scale(0.95);
  background-color: rgba(0, 0, 0, 0.3);
}

.swiper-arrow:hover {
  transform: translateY(-50%) scale(1.05);
  background-color: rgba(0, 0, 0, 0.3);
}

.swiper {
  width: 100%;
  height: 100%;
  border-radius: calc(var(--radius-xl) - 2rpx); /* 确保图片不会被边框裁切 */
  overflow: hidden;
}

.swiper-item {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper-image {
  width: 100%;
  height: 100%;
  display: block;
  transition: transform 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  filter: brightness(1.02) contrast(1.05);
}

.swiper-item:active .swiper-image {
  transform: scale(1.02);
}

/* 渐变叠加层 - 多层次设计 */
.swiper-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, 
    rgba(0, 0, 0, 0) 0%, 
    rgba(0, 0, 0, 0.1) 30%, 
    rgba(0, 0, 0, 0.4) 60%,
    rgba(0, 0, 0, 0.7) 100%);
  pointer-events: none;
}

/* 轮播内容容器 - 更精致的设计 */
.swiper-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: var(--spacing-xl) var(--spacing-lg);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: white;
  z-index: 3; /* 确保内容在叠加层之上 */
  background: linear-gradient(to top, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0) 100%);
  border-bottom-left-radius: calc(var(--radius-xl) - 2rpx);
  border-bottom-right-radius: calc(var(--radius-xl) - 2rpx);
}

.swiper-title {
  font-size: var(--font-size-xxl);
  font-weight: var(--font-weight-bold);
  line-height: var(--line-height-tight);
  text-shadow: 0 2rpx 15rpx rgba(0, 0, 0, 0.5);
  margin: 0;
  max-width: 90%;
  letter-spacing: 2rpx;
  position: relative;
}

.swiper-title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.8), transparent);
  border-radius: 2rpx;
}

/* -------------------
  主要内容区域
-------------------- */
.main-content {
  flex: 1;
  padding: 0 30rpx;
  background: linear-gradient(180deg, 
    var(--bg-secondary) 0%, 
    rgba(247, 248, 252, 0.98) 30%, 
    rgba(244, 245, 247, 0.96) 70%, 
    var(--bg-secondary) 100%);
  margin-top: 0; /* 移除顶部间距，因为轮播图已经有底部边距 */
  position: relative;
  z-index: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 20rpx; /* 减少底部留白 */
}

/* 区域通用样式 */
.section {
  background-color: var(--bg-primary);
  margin: var(--spacing-md) 0;
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
}

.section-header {
  text-align: center;
  margin-bottom: var(--spacing-lg);
}

.section-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.section-subtitle {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  line-height: var(--line-height-normal);
}

/* 角色选择区域特殊样式 */
.role-selection {
  margin-top: var(--spacing-lg); /* 增加与轮播图的间距 */
}

/* 底部留白 */
.bottom-padding {
  height: var(--spacing-md); /* 减少底部留白 */
}

/* -------------------
  角色选择样式
-------------------- */
.role-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.role-row {
  display: flex;
  gap: var(--spacing-md);
  justify-content: center;
}

.role-row.top {
  justify-content: center;
  gap: var(--spacing-xl); /* 上排角色间距更大 */
}

.role-row.bottom {
  justify-content: space-around;
}

.role-item {
  position: relative;
  background-color: var(--bg-primary);
  border: 2rpx solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: var(--transition-base);
  overflow: hidden;
  cursor: pointer;
  box-shadow: var(--shadow-sm);
}

.role-row.top .role-item {
  width: 240rpx; /* 上排角色更宽 */
  height: 240rpx;
}

.role-row.bottom .role-item {
  width: 200rpx; /* 下排角色略窄 */
  height: 200rpx;
}



/* 角色项默认状态 */
.role-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

/* 角色项悬停效果 */
.role-item:hover {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-md);
  border-color: var(--primary-light);
}

.role-item:hover::before {
  opacity: 1;
}

/* 角色项点击效果 */
.role-item:active {
  transform: translateY(-2rpx);
}

/* 角色项选中状态 */
.role-item.selected {
  background-color: var(--primary-lightest);
  border-color: var(--primary-color);
  box-shadow: 0 8rpx 24rpx rgba(45, 100, 240, 0.15);
  transform: translateY(-2rpx);
}

/* 选中状态指示器 */
.role-select-indicator {
  position: absolute;
  top: var(--spacing-sm);
  right: var(--spacing-sm);
  width: 40rpx;
  height: 40rpx;
  background-color: var(--primary-color);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(45, 100, 240, 0.3);
  animation: popIn 0.4s ease;
}

.role-row.top .role-select-indicator {
  width: 48rpx;
  height: 48rpx;
}

.role-row.bottom .role-select-indicator {
  width: 36rpx;
  height: 36rpx;
}

.select-icon {
  color: white;
  font-weight: bold;
}

.role-row.top .select-icon {
  font-size: 28rpx;
}

.role-row.bottom .select-icon {
  font-size: 22rpx;
}

/* 角色图标容器 */
.role-icon-container {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: var(--spacing-sm);
  position: relative;
  flex-shrink: 0;
}

.role-row.top .role-icon-container {
  width: 100rpx;
  height: 100rpx;
}

.role-row.bottom .role-icon-container {
  width: 70rpx;
  height: 70rpx;
}

.role-icon-container::before {
  content: '';
  position: absolute;
  top: -16rpx;
  left: -16rpx;
  right: -16rpx;
  bottom: -16rpx;
  background: linear-gradient(135deg, var(--primary-light), var(--primary-lightest));
  border-radius: var(--radius-full);
  opacity: 0.2;
  transition: opacity 0.3s ease;
}

.role-item:hover .role-icon-container::before {
  opacity: 0.3;
}

.role-icon {
  width: 100%;
  height: 100%;
  background-color: white;
  border-radius: var(--radius-full);
  padding: var(--spacing-md);
  box-sizing: border-box;
  box-shadow: var(--shadow-sm);
  position: relative;
  z-index: 1;
  transition: transform 0.3s ease;
}

.role-row.top .role-icon {
  padding: var(--spacing-lg);
}

.role-row.bottom .role-icon {
  padding: var(--spacing-sm);
}

.role-item:hover .role-icon {
  transform: scale(1.05);
}

.role-item.selected .role-icon {
  transform: scale(1.1);
}

.role-icon image {
  width: 100%;
  height: 100%;
}

/* 角色信息 */
.role-info {
  width: 100%;
  text-align: center;
  position: relative;
  z-index: 1;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.role-name {
  margin-bottom: var(--spacing-xs);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  position: relative;
  line-height: var(--line-height-tight);
}

.role-row.top .role-name {
  font-size: var(--font-size-lg);
}

.role-row.bottom .role-name {
  font-size: var(--font-size-base);
}

.role-description {
  line-height: var(--line-height-normal);
  color: var(--text-secondary);
  opacity: 0.9;
  transition: opacity 0.3s ease;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.role-row.top .role-description {
  font-size: var(--font-size-sm);
  -webkit-line-clamp: 2;
}

.role-row.bottom .role-description {
  font-size: var(--font-size-xs);
  -webkit-line-clamp: 1;
}

.role-item:hover .role-description {
  opacity: 1;
}

/* 装饰元素 */
.role-decoration {
  position: absolute;
  top: 0;
  right: 0;
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, rgba(45, 100, 240, 0.05), rgba(45, 100, 240, 0));
  border-radius: 0 0 0 100%;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.role-item:hover .role-decoration,
.role-item.selected .role-decoration {
  opacity: 1;
}

/* 角色选择动画 */
@keyframes popIn {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  80% {
    transform: scale(1.1);
    opacity: 0.8;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* -------------------
  快捷入口样式
-------------------- */
.quick-entrance-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-lg);
  width: 100%;
}

.quick-entrance-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-lg) var(--spacing-md);
  border-radius: var(--radius-lg);
  background-color: var(--bg-primary);
  transition: var(--transition-base);
  box-shadow: var(--shadow-md);
  position: relative;
  overflow: hidden;
  border: 2rpx solid var(--border-color);
  min-height: 180rpx;
  justify-content: center;
  aspect-ratio: 1;
}



/* 快捷入口项背景效果 */
.quick-entrance-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

/* 快捷入口项悬停效果 */
.quick-entrance-item:hover {
  transform: translateY(-6rpx);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-color);
  background: linear-gradient(135deg, var(--primary-lightest), var(--bg-primary));
}

.quick-entrance-item:hover::before {
  transform: scaleX(1);
}

/* 快捷入口项点击效果 */
.quick-entrance-item:active {
  transform: translateY(-3rpx);
}



/* 快捷入口图标容器 */
.quick-entrance-icon {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: var(--spacing-md);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: var(--radius-lg);
  background: linear-gradient(135deg, var(--primary-lightest), var(--primary-color));
  transition: all 0.3s ease;
  box-shadow: var(--shadow-md);
}

/* 快捷入口图标背景装饰 */
.quick-entrance-icon::before {
  content: '';
  position: absolute;
  top: -16rpx;
  left: -16rpx;
  right: -16rpx;
  bottom: -16rpx;
  background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
  border-radius: var(--radius-full);
  opacity: 0.15;
  transition: all 0.3s ease;
}

.quick-entrance-item:hover .quick-entrance-icon {
  transform: scale(1.1);
  box-shadow: var(--shadow-lg);
}

.quick-entrance-item:hover .quick-entrance-icon::before {
  opacity: 0.25;
  transform: scale(1.1);
}

/* 图标 */
.quick-entrance-icon image {
  width: 60%;
  height: 60%;
  position: relative;
  z-index: 1;
}

/* 快捷入口名称 */
.quick-entrance-name {
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
  color: var(--text-primary);
  text-align: center;
  line-height: var(--line-height-tight);
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
  z-index: 1;
  transition: all 0.3s ease;
  margin-top: var(--spacing-xs);
}

.quick-entrance-item:hover .quick-entrance-name {
  color: var(--primary-color);
  font-weight: var(--font-weight-semibold);
}

/* -------------------
  动画效果
-------------------- */
/* 淡入动画 - 更流畅 */
.fade-in-up {
  animation: fadeInUp 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(5deg);
  }
}

/* -------------------
  页面加载动画
-------------------- */
.page-loader {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--bg-primary);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  transition: opacity 0.8s ease, visibility 0.8s ease;
}

.page-loader.hidden {
  opacity: 0;
  visibility: hidden;
}

/* 加载动画 */
.loader-spinner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 8rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

.loader-text {
  font-size: var(--font-size-base);
  color: var(--text-primary);
  opacity: 0.8;
  animation: pulse 1.5s ease-in-out infinite;
}

/* 旋转动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 脉冲动画 */
@keyframes pulse {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 1; }
}

/* -------------------
  其他元素
-------------------- */
/* 离线状态提示 */
.offline-tip {
  position: fixed;
  top: 88rpx; /* 适配状态栏 */
  left: 0;
  right: 0;
  background-color: var(--warning-color);
  color: white;
  text-align: center;
  padding: var(--spacing-sm);
  font-size: var(--font-size-sm);
  z-index: 1000;
}

/* 淡入淡出动画 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeOut {
  from { opacity: 1; }
  to { opacity: 0; }
}

/* 滑动动画 */
@keyframes slideUp {
  from { transform: translateY(40rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

@keyframes slideDown {
  from { transform: translateY(-40rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

/* 缩放动画 */
@keyframes scaleIn {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

@keyframes scaleOut {
  from { transform: scale(1); opacity: 1; }
  to { transform: scale(0.9); opacity: 0; }
}

/* -------------------
  语音导航按钮
-------------------- */
.voice-nav-btn {
  position: fixed;
  bottom: calc(var(--spacing-xl) + 80rpx); /* 为底部导航栏留空间 */
  right: calc(var(--spacing-lg) + 30rpx); /* 考虑主内容区域的右内边距 */
  width: 100rpx;
  height: 100rpx;
  border-radius: var(--radius-full);
  background-color: var(--primary-color);
  box-shadow: var(--shadow-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  transition: var(--transition-base);
  animation: float 3s ease-in-out infinite;
  border: 4rpx solid var(--primary-light);
}

.voice-nav-btn:hover {
  transform: scale(1.1);
  box-shadow: var(--shadow-xl);
}

.voice-nav-btn:active {
  transform: scale(0.95);
}

.voice-nav-btn::before {
  content: '';
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  right: -8rpx;
  bottom: -8rpx;
  border-radius: var(--radius-full);
  border: 2rpx dashed var(--primary-light);
  opacity: 0.5;
  animation: rotate 3s linear infinite;
}

/* -------------------
  响应式设计
-------------------- */
/* 小屏幕设备适配 */
@media screen and (max-width: 375px) {
  .role-row.top .role-item {
    width: 180rpx;
    height: 180rpx;
  }
  
  .role-row.bottom .role-item {
    width: 160rpx;
    height: 160rpx;
  }
  
  .quick-entrance-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .swiper-arrow {
    width: 60rpx;
    height: 60rpx;
  }
  
  .swiper-arrow-left {
    left: -35rpx;
  }
  
  .swiper-arrow-right {
    right: -35rpx;
  }
  
  .arrow-icon {
    font-size: 32rpx;
  }
}

/* 大屏幕设备适配 */
@media screen and (min-width: 415px) {
  .role-row.top .role-item {
    width: 280rpx;
    height: 280rpx;
  }
  
  .role-row.bottom .role-item {
    width: 220rpx;
    height: 220rpx;
  }
  
  .quick-entrance-item {
    min-height: 180rpx;
  }
  
  .swiper-arrow {
    width: 90rpx;
    height: 90rpx;
  }
  
  .swiper-arrow-left {
    left: -55rpx;
  }
  
  .swiper-arrow-right {
    right: -55rpx;
  }
  
  .arrow-icon {
    font-size: 48rpx;
  }
}

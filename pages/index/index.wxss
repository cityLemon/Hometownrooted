/**index.wxss**/
page {
  display: flex;
  flex-direction: column;
  background-color: var(--bg-secondary);
  min-height: 100vh;
  box-sizing: border-box;
  position: relative;
  overflow-x: hidden;
}

/* 背景装饰元素 */
page::before {
  content: '';
  position: fixed;
  top: -10%;
  right: -10%;
  width: 50%;
  height: 50%;
  background: radial-gradient(circle, rgba(45, 100, 240, 0.05) 0%, rgba(45, 100, 240, 0) 70%);
  border-radius: 50%;
  z-index: -1;
  animation: float 20s ease-in-out infinite;
}

page::after {
  content: '';
  position: fixed;
  bottom: -15%;
  left: -15%;
  width: 60%;
  height: 60%;
  background: radial-gradient(circle, rgba(76, 175, 80, 0.05) 0%, rgba(76, 175, 80, 0) 70%);
  border-radius: 50%;
  z-index: -1;
  animation: float 15s ease-in-out infinite reverse;
}

/* 卡片装饰效果 */
.card {
  position: relative;
  overflow: hidden;
  border-radius: 24rpx;
  background-color: var(--bg-primary);
  box-shadow: var(--shadow-md);
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--secondary-color), var(--success-color));
}

/* 角色选择区域装饰 */
.section.card::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  width: 200rpx;
  height: 200rpx;
  background: linear-gradient(135deg, rgba(45, 100, 240, 0.02), rgba(45, 100, 240, 0));
  border-radius: 50%;
  z-index: 0;
}

/* 浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0) rotate(0deg);
  }
  50% {
    transform: translateY(-20rpx) rotate(5deg);
  }
}

.main-content {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 轮播图样式 */
.swiper-container {
  width: calc(100% - 60rpx);
  height: 45vh;
  max-height: 450rpx;
  min-height: 320rpx;
  margin: 30rpx;
  margin-top: 120rpx; /* 增加顶部边距，避免与微信胶囊按钮冲突 */
  overflow: hidden;
  border-radius: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.swiper {
  width: 100%;
  height: 100%;
}

.swiper-item {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.swiper-image {
  width: 100%;
  height: 100%;
  transition: transform 0.8s ease;
}

.swiper-item:active .swiper-image {
  transform: scale(1.05);
}

/* 渐变叠加层 */
.swiper-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 50%, rgba(0, 0, 0, 0.6) 100%);
  pointer-events: none;
}

/* 轮播内容容器 */
.swiper-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 60rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.swiper-title {
  color: white;
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-bold);
  line-height: var(--line-height-tight);
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.5);
  margin: 0;
  max-width: 90%;
}

/* 淡入动画 */
.fade-in-up {
  animation: fadeInUp 1s ease forwards;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 主要内容样式 */
.main-content {
  padding: 30rpx;
  background-color: var(--bg-secondary);
}

/* 区域样式 */
.section {
  margin-bottom: 40rpx;
}

.section-title {
  margin-bottom: var(--spacing-lg);
  text-align: center;
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  color: var(--text-primary);
}

/* 角色选择样式 */
.role-list {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  margin-bottom: 30rpx;
  justify-content: space-between;
  flex-wrap: wrap;
  overflow-x: hidden;
}

/* 角色项样式调整 */
.role-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: var(--bg-primary);
  border-radius: 20rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 3rpx solid transparent;
  box-shadow: var(--shadow-md);
  position: relative;
  overflow: hidden;
  cursor: pointer;
  flex: 1;
  min-width: 180rpx;
  max-width: 220rpx;
}



/* 角色项默认状态 */
.role-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

/* 角色项悬停效果 */
.role-item:hover {
  transform: translateY(-6rpx);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-light);
}

.role-item:hover::before {
  opacity: 1;
}

/* 角色项点击效果 */
.role-item:active {
  transform: translateY(-2rpx);
}

/* 角色项选中状态 */
.role-item:active,
.role-item.selected {
  background-color: var(--primary-lightest);
  border-color: var(--primary-color);
  box-shadow: 0 12rpx 40rpx rgba(45, 100, 240, 0.2);
}

/* 选中状态指示器 */
.role-select-indicator {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(45, 100, 240, 0.3);
  animation: popIn 0.4s ease;
}

.select-icon {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

/* 角色图标容器 */
.role-icon-container {
  width: 80rpx;
  height: 80rpx;
  margin-right: 0;
  margin-bottom: 12rpx;
  position: relative;
  flex-shrink: 0;
}

.role-icon-container::before {
  content: '';
  position: absolute;
  top: -16rpx;
  left: -16rpx;
  right: -16rpx;
  bottom: -16rpx;
  background: linear-gradient(135deg, var(--primary-light), var(--primary-lightest));
  border-radius: 50%;
  opacity: 0.2;
  transition: opacity 0.3s ease;
}

.role-item:hover .role-icon-container::before {
  opacity: 0.3;
}

.role-icon {
  width: 100%;
  height: 100%;
  background-color: white;
  border-radius: 50%;
  padding: 20rpx;
  box-sizing: border-box;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
  transition: transform 0.3s ease;
}

.role-item:hover .role-icon {
  transform: scale(1.05);
}

.role-item.selected .role-icon {
  transform: scale(1.1);
}

.role-icon image {
  width: 100%;
  height: 100%;
}

/* 角色信息 */
.role-info {
  width: 100%;
  text-align: center;
  position: relative;
  z-index: 1;
}

.role-name {
  margin-bottom: 12rpx;
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--text-primary);
  position: relative;
}

.role-name::after {
  content: '';
  position: absolute;
  bottom: -4rpx;
  left: 0;
  width: 0;
  height: 4rpx;
  background-color: var(--primary-color);
  transition: width 0.3s ease;
  border-radius: 2rpx;
}

.role-item:hover .role-name::after {
  width: 60rpx;
}

.role-description {
  font-size: var(--font-size-base);
  line-height: 1.5;
  color: var(--text-secondary);
  opacity: 0.9;
  transition: opacity 0.3s ease;
}

.role-item:hover .role-description {
  opacity: 1;
}

/* 装饰元素 */
.role-decoration {
  position: absolute;
  top: 0;
  right: 0;
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, rgba(45, 100, 240, 0.05), rgba(45, 100, 240, 0));
  border-radius: 0 0 0 100%;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.role-item:hover .role-decoration,
.role-item.selected .role-decoration {
  opacity: 1;
}

/* 角色选择动画 */
@keyframes popIn {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  80% {
    transform: scale(1.1);
    opacity: 0.8;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 快捷入口样式 */
.quick-entrance-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

/* 进入按钮项样式 */
.quick-entrance-item.enter-btn-item {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent !important;
  padding: 0;
  border: none;
  box-shadow: none;
}

.quick-entrance-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 20rpx;
  border-radius: 20rpx;
  background-color: white;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-sm);
  position: relative;
  overflow: hidden;
  border: 2rpx solid transparent;
  min-height: 200rpx;
}

/* 全宽按钮样式 */
.btn-full {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 32rpx;
  padding: 0;
}

/* 快捷入口项背景效果 */
.quick-entrance-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

/* 快捷入口项悬停效果 */
.quick-entrance-item:hover {
  transform: translateY(-8rpx) scale(1.02);
  box-shadow: var(--shadow-lg);
  border-color: var(--primary-light);
}

.quick-entrance-item:hover::before {
  transform: scaleX(1);
}

/* 快捷入口项点击效果 */
.quick-entrance-item:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: var(--shadow-md);
}

/* 快捷入口图标容器 */
.quick-entrance-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 24rpx;
  background: linear-gradient(135deg, var(--primary-lightest), var(--secondary-lightest));
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

/* 图标背景装饰 */
.quick-entrance-icon::before {
  content: '';
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  right: -20rpx;
  bottom: -20rpx;
  background: linear-gradient(135deg, var(--primary-light), var(--secondary-light));
  border-radius: 50%;
  opacity: 0.1;
  transition: opacity 0.3s ease;
}

.quick-entrance-item:hover .quick-entrance-icon {
  transform: scale(1.1);
  box-shadow: 0 8rpx 24rpx rgba(45, 100, 240, 0.2);
}

.quick-entrance-item:hover .quick-entrance-icon::before {
  opacity: 0.2;
}

/* 图标 */
.quick-entrance-icon image {
  width: 60%;
  height: 60%;
  position: relative;
  z-index: 1;
  transition: transform 0.3s ease;
}

.quick-entrance-item:hover .quick-entrance-icon image {
  transform: scale(1.1);
}

/* 快捷入口名称 */
.quick-entrance-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  text-align: center;
  line-height: 1.4;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  position: relative;
  z-index: 1;
  transition: color 0.3s ease;
}

.quick-entrance-item:hover .quick-entrance-name {
  color: var(--primary-color);
}

/* 按钮样式优化 */
.btn {
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 12rpx;
  font-weight: 600;
  box-shadow: var(--shadow-md);
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
  color: white;
  border: none;
}

.btn-primary:hover {
  background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
  box-shadow: var(--shadow-lg);
  transform: translateY(-2rpx);
}

.btn-primary:active {
  transform: translateY(0);
  box-shadow: var(--shadow-md);
}

.btn-primary:disabled {
  background: var(--bg-tertiary);
  color: var(--text-secondary);
  box-shadow: none;
  transform: none;
}

.btn-large {
  padding: 28rpx 0;
  font-size: 32rpx;
}

/* 快捷入口项加载动画 */
@keyframes entranceItemLoad {
  0% {
    transform: translateY(40rpx);
    opacity: 0;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 页面基本样式 */
.container {
  min-height: 100vh;
  background-color: var(--bg-secondary);
  font-family: var(--font-family);
  color: var(--text-primary);
  overflow-x: hidden;
}

/* 页面加载动画 */
.page-loader {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--bg-primary);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  transition: opacity 0.8s ease, visibility 0.8s ease;
}

.page-loader.hidden {
  opacity: 0;
  visibility: hidden;
}

/* 加载动画 */
.loader-spinner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 8rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

.loader-text {
  font-size: 32rpx;
  color: var(--text-primary);
  opacity: 0.8;
  animation: pulse 1.5s ease-in-out infinite;
}

/* 旋转动画 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 脉冲动画 */
@keyframes pulse {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 1; }
}

/* 淡入淡出动画 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes fadeOut {
  from { opacity: 1; }
  to { opacity: 0; }
}

/* 滑动动画 */
@keyframes slideUp {
  from { transform: translateY(40rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

@keyframes slideDown {
  from { transform: translateY(-40rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

/* 缩放动画 */
@keyframes scaleIn {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

@keyframes scaleOut {
  from { transform: scale(1); opacity: 1; }
  to { transform: scale(0.9); opacity: 0; }
}

/* 语音导航按钮样式 */
.voice-nav-btn {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: var(--bg-primary);
  box-shadow: 0 8rpx 32rpx rgba(45, 100, 240, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  animation: pulse 2s ease-in-out infinite;
  border: 4rpx solid var(--primary-light);
}

.voice-nav-btn:hover {
  transform: scale(1.1) translateY(-4rpx);
  box-shadow: 0 12rpx 48rpx rgba(45, 100, 240, 0.3);
}

.voice-nav-btn:active {
  transform: scale(0.95);
}

.voice-nav-btn::before {
  content: '';
  position: absolute;
  top: -8rpx;
  left: -8rpx;
  right: -8rpx;
  bottom: -8rpx;
  border-radius: 50%;
  border: 2rpx dashed var(--primary-light);
  opacity: 0.5;
  animation: rotate 3s linear infinite;
}

/* 旋转动画 */
@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 响应式设计 */
/* 小屏幕设备 */
@media screen and (max-width: 375px) {
  .swiper-container {
    height: 35vh;
    max-height: 300rpx;
  }
  
  .main-content {
    padding: 0 20rpx 80rpx 20rpx;
  }
  
  .role-item {
    padding: 24rpx;
  }
  
  .role-icon-container {
    width: 100rpx;
    height: 100rpx;
    margin-right: 24rpx;
  }
  
  .quick-entrance-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
    padding: 0 10rpx;
  }
  
  .quick-entrance-item {
    min-height: 180rpx;
    padding: 24rpx 16rpx;
  }
  
  .quick-entrance-icon {
    width: 80rpx;
    height: 80rpx;
  }
}

/* 中等屏幕设备 */
@media screen and (min-width: 376px) and (max-width: 414px) {
  .swiper-container {
    height: 40vh;
    max-height: 350rpx;
  }
  
  .quick-entrance-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 20rpx;
  }
}

/* 大屏幕设备 */
@media screen and (min-width: 415px) {
  .swiper-container {
    height: 50vh;
    max-height: 500rpx;
  }
  
  .role-list {
    gap: 30rpx;
  }
  
  .role-item {
    padding: 40rpx;
  }
  
  .quick-entrance-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 30rpx;
  }
  
  .quick-entrance-item {
    min-height: 250rpx;
    padding: 40rpx 24rpx;
  }
  
  .quick-entrance-icon {
    width: 120rpx;
    height: 120rpx;
  }
}

/* 横屏模式 */
@media screen and (orientation: landscape) {
  .swiper-container {
    height: 70vh;
    max-height: none;
  }
  
  .role-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24rpx;
  }
  
  .role-item {
    flex-direction: column;
    text-align: center;
    padding: 32rpx 24rpx;
  }
  
  .role-icon-container {
    margin-right: 0;
    margin-bottom: 24rpx;
  }
  
  .quick-entrance-grid {
    grid-template-columns: repeat(6, 1fr);
  }
}

/* convenience.wxss - 便民服务样式 */

/* CSS变量定义 */
page {
  --primary-color: #FF7800;  /* 橙色主题 */
  --primary-light: #FF9A3C;
  --primary-lightest: #FFF4E6;
  --secondary-color: #FF9500;
  --accent-color: #FF7800;
  --success-color: #52C41A;
  --warning-color: #FAAD14;
  --error-color: #F5222D;
  --info-color: #1890FF;
  
  --text-primary: #262626;
  --text-secondary: #8C8C8C;
  --text-muted: #BFBFBF;
  
  --bg-primary: #FFFFFF;
  --bg-secondary: #F7F7F7;
  --bg-tertiary: #F0F0F0;
  
  --border-color: #D9D9D9;
  --divider-color: #F0F0F0;
  
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  
  --radius-xs: 8rpx;
  --radius-sm: 12rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-full: 50%;
  
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  --spacing-xxl: 64rpx;
  
  --font-size-xs: 22rpx;
  --font-size-sm: 24rpx;
  --font-size-base: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-xxl: 44rpx;
  
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  
  --line-height-tight: 1.2;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.75;
  
  --transition-base: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  --transition-fast: all 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 页面标题区域 */
.page-header {
  background-color: var(--primary-color);
  color: white;
  padding: 0rpx 30rpx 8rpx;
  text-align: center;
  position: relative;
  z-index: 1;
  margin-top: -10rpx; /* 与状态栏无缝衔接 */
}

.page-title {
  font-size: 28rpx;
  font-weight: normal;
}

/* 页面加载动画 */
.page-loader {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--bg-primary);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  transition: opacity 0.8s ease, visibility 0.8s ease;
}

.page-loader.hidden {
  opacity: 0;
  visibility: hidden;
}

.loader-spinner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 8rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

.loader-text {
  font-size: 28rpx;
  color: var(--text-primary);
  opacity: 0.8;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 1; }
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-primary);
  position: relative;
  z-index: 1;
}

/* 顶部状态栏占位 */
.status-bar-placeholder {
  height: 0; /* 移除状态栏占位 */
  background-color: var(--primary-color); /* 添加背景色 */
}

/* 离线状态提示 */
.offline-tip {
  position: fixed;
  top: 88rpx; /* 适配状态栏 */
  left: 0;
  right: 0;
  background-color: var(--warning-color);
  color: white;
  text-align: center;
  padding: var(--spacing-sm);
  font-size: var(--font-size-sm);
  z-index: 1000;
}



/* 页面内容 */
.page-content {
  padding: 30rpx;
  flex: 1;
  background-color: var(--bg-secondary);
}

/* 区域标题 */
.section-title {
  margin-bottom: 30rpx;
  text-align: center;
}

/* 搜索框样式 */
.search-bar {
  margin-bottom: 30rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
  padding: 20rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: var(--bg-tertiary);
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.search-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  color: var(--text-secondary);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
  background: transparent;
  border: none;
  outline: none;
}

.search-clear {
  font-size: 32rpx;
  color: var(--text-secondary);
  padding: 10rpx;
  cursor: pointer;
}

/* 服务类型切换样式 */
.service-type-tabs {
  margin-bottom: 30rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

.scroll-view-horizontal {
  display: flex;
  width: 100%;
  white-space: nowrap;
}

.service-type-tab {
  display: inline-block;
  padding: 20rpx 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  margin-right: 10rpx;
  border-radius: 16rpx;
  margin: 10rpx;
}

.service-type-tab:active {
  opacity: 0.8;
}

/* 服务列表样式 */
.service-list {
  margin-bottom: 40rpx;
}

/* 服务项样式 */
.service-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.service-item:hover {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-md);
}

/* 服务图标样式 */
.service-icon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  background-color: var(--bg-secondary);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.service-icon image {
  width: 100rpx;
  height: 100rpx;
}

/* 服务信息样式 */
.service-info {
  flex: 1;
  margin-right: 20rpx;
}

.service-name {
  margin-bottom: 10rpx;
}

/* 服务操作按钮样式 */
.service-actions {
  display: flex;
  align-items: center;
}

/* 预约记录列表样式 */
.booking-list {
  margin-bottom: 40rpx;
}

/* 预约记录项样式 */
.booking-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.booking-item:hover {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-md);
}

/* 预约服务名称样式 */
.booking-service {
  margin-bottom: 10rpx;
}

/* 预约时间样式 */
.booking-time {
  margin-bottom: 10rpx;
}

/* 预约状态样式 */
.booking-status {
  font-weight: 700;
}

/* 空状态样式 */
.empty-text {
  text-align: center;
  padding: 40rpx;
  color: var(--text-secondary);
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
}

/* 加载更多样式 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.load-more-spinner {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  animation: spin 1s linear infinite;
  margin-right: 20rpx;
}

.load-more-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 28rpx;
  color: var(--text-muted);
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

/* 模态框样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 998;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 999;
  width: 90%;
  max-width: 600rpx;
  animation: modalFadeIn 0.3s ease;
}

.modal-content {
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-lg);
  padding: 40rpx;
  max-height: 80vh;
  overflow-y: auto;
}

/* 模态框动画 */
@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: translate(-50%, -60%) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.modal-title {
  margin-bottom: 30rpx;
  text-align: center;
}

.modal-body {
  margin-bottom: 30rpx;
}

.modal-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.modal-footer {
  display: flex;
}

/* 按钮样式扩展 */
.btn-secondary {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
}

/* 响应式设计 */
@media (max-width: 768px) {
  .page-content {
    padding: 20rpx;
  }
  
  .service-type-tab {
    padding: 15rpx 25rpx;
    font-size: 30rpx;
  }
  
  .service-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .service-icon {
    margin-bottom: 20rpx;
  }
  
  .service-info {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .service-actions {
    width: 100%;
    justify-content: space-between;
  }
  
  .btn {
    flex: 1;
  }
  
  .booking-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .booking-status {
    margin-bottom: 20rpx;
  }
  
  .modal-container {
    width: 95%;
  }
  
  .modal-content {
    padding: 30rpx;
  }
}

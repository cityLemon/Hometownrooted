/* profile.wxss - 个人信息样式 */

/* CSS变量定义 */
page {
  --primary-color: #FF7800;  /* 橙色主题 */
  --primary-light: #FF9A3C;
  --primary-lightest: #FFF4E6;
  --secondary-color: #FF9500;
  --accent-color: #FF7800;
  --success-color: #52C41A;
  --warning-color: #FAAD14;
  --error-color: #F5222D;
  --info-color: #1890FF;
  
  --text-primary: #262626;
  --text-secondary: #8C8C8C;
  --text-muted: #BFBFBF;
  
  --bg-primary: #FFFFFF;
  --bg-secondary: #F7F7F7;
  --bg-tertiary: #F0F0F0;
  
  --border-color: #D9D9D9;
  --divider-color: #F0F0F0;
  
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  
  --radius-xs: 8rpx;
  --radius-sm: 12rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-full: 50%;
  
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  --spacing-xxl: 64rpx;
  
  --font-size-xs: 22rpx;
  --font-size-sm: 24rpx;
  --font-size-base: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-xxl: 44rpx;
  
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  
  --line-height-tight: 1.2;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.75;
  
  --transition-base: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  --transition-fast: all 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 页面标题区域 */
.page-header {
  background-color: var(--primary-color);
  color: white;
  padding: 0rpx 30rpx 8rpx;
  text-align: center;
  position: relative;
  z-index: 1;
  margin-top: -10rpx; /* 与状态栏无缝衔接 */
}

.page-title {
  font-size: 28rpx;
  font-weight: normal;
}

/* 页面加载动画 */
.page-loader {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--bg-primary);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  transition: opacity 0.8s ease, visibility 0.8s ease;
}

.page-loader.hidden {
  opacity: 0;
  visibility: hidden;
}

.loader-spinner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 8rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

.loader-text {
  font-size: 28rpx;
  color: var(--text-primary);
  opacity: 0.8;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 1; }
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-primary);
  position: relative;
  z-index: 1;
}

/* 顶部状态栏占位 */
.status-bar-placeholder {
  height: 0; /* 移除状态栏占位 */
  background-color: var(--primary-color); /* 添加背景色 */
}

/* 离线状态提示 */
.offline-tip {
  position: fixed;
  top: 88rpx; /* 适配状态栏 */
  left: 0;
  right: 0;
  background-color: var(--warning-color);
  color: white;
  text-align: center;
  padding: var(--spacing-sm);
  font-size: var(--font-size-sm);
  z-index: 1000;
}



/* 页面内容 */
.page-content {
  padding: 30rpx;
  flex: 1;
  background-color: var(--bg-secondary);
}

/* 编辑模式按钮 */
.edit-mode-buttons {
  margin-bottom: 30rpx;
  text-align: center;
}

/* 保存/取消按钮 */
.save-cancel-buttons {
  display: flex;
  margin-bottom: 30rpx;
}

/* 头像区域样式 */
.avatar-section {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

/* 头像容器样式 */
.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
}

/* 头像样式 */
.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 4rpx solid var(--border-color);
  margin-bottom: 20rpx;
  background-color: var(--bg-primary);
}

/* 头像提示样式 */
.avatar-hint {
  font-weight: 500;
}

/* 卡片样式 */
.card {
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

/* 区域标题 */
.section-title {
  margin-bottom: 30rpx;
  text-align: center;
}

/* 表单样式 */
.form-item {
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  align-items: flex-start;
}

.form-label {
  margin-bottom: 10rpx;
}

.form-value {
  font-size: 32rpx;
  color: var(--text-primary);
  background-color: var(--bg-secondary);
  padding: 20rpx;
  border-radius: 8rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 80rpx;
  display: flex;
  align-items: center;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  min-height: 80rpx;
  background-color: var(--bg-primary);
  color: var(--text-primary);
}

.form-input::placeholder {
  color: var(--text-tertiary);
}

/* 家庭成员样式 */
.family-member-item {
  padding: 30rpx;
  background-color: var(--bg-secondary);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.family-member-info {
  display: flex;
  flex-direction: column;
}

.family-member-name {
  margin-bottom: 10rpx;
}

.family-member-relation {
  margin-bottom: 5rpx;
}

/* 账户设置样式 */
.setting-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: var(--bg-secondary);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.setting-item:hover {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-md);
}

.setting-icon {
  font-size: 40rpx;
  margin-right: 30rpx;
}

.setting-info {
  flex: 1;
}

.setting-name {
  margin-bottom: 10rpx;
}

.setting-arrow {
  font-size: 32rpx;
  color: var(--text-tertiary);
}

/* 空状态样式 */
.empty-text {
  text-align: center;
  padding: 40rpx;
  color: var(--text-secondary);
}

/* 按钮样式扩展 */
.btn-secondary {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
}

/* 响应式设计 */
@media (max-width: 768px) {
  .page-content {
    padding: 20rpx;
  }
  
  .card {
    padding: 20rpx;
  }
  
  .avatar {
    width: 180rpx;
    height: 180rpx;
  }
  
  .setting-item {
    padding: 25rpx;
  }
  
  .setting-icon {
    font-size: 36rpx;
    margin-right: 25rpx;
  }
}

/**record.wxss - 服务记录与兑换样式**/

/* 页面内容 */
.page-content {
  padding: 30rpx;
  background-color: var(--bg-secondary);
  min-height: calc(100vh - var(--navigation-bar-height, 0px));
}

/* 卡片样式 */
.card {
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

/* 区域标题 */
.section-title {
  margin-bottom: 30rpx;
  text-align: center;
}

/* 余额卡片样式 */
.balance-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.balance-title {
  margin-bottom: 20rpx;
}

.balance-content {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.balance-number {
  margin-right: 10rpx;
}

/* 记录类型切换样式 */
.record-type-tabs {
  display: flex;
  margin-bottom: 30rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.record-type-tab {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.record-type-tab:active {
  opacity: 0.8;
}

/* 服务记录列表样式 */
.record-list {
  margin-bottom: 40rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.record-item:hover {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-md);
}

.record-type-icon {
  font-size: 36rpx;
  font-weight: 700;
  margin-right: 30rpx;
  width: 120rpx;
  text-align: center;
}

.record-info {
  flex: 1;
}

.record-title {
  margin-bottom: 10rpx;
}

.record-time {
  margin-bottom: 5rpx;
}

/* 兑换规则网格 */
.exchange-rules-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

/* 兑换规则卡片样式 */
.exchange-rule-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

.exchange-rule-card:hover {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-md);
}

.exchange-rule-image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  background-color: var(--bg-secondary);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.exchange-rule-image image {
  width: 100rpx;
  height: 100rpx;
}

.exchange-rule-info {
  flex: 1;
  margin-right: 20rpx;
}

.exchange-rule-name {
  margin-bottom: 10rpx;
}

.exchange-rule-description {
  margin-bottom: 10rpx;
}

/* 空状态样式 */
.empty-text {
  text-align: center;
  padding: 40rpx;
  color: var(--text-secondary);
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
}

/* 模态框样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 998;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-container {
  position: relative;
  z-index: 999;
  width: 90%;
  max-width: 600rpx;
  animation: modalFadeIn 0.3s ease;
}

.modal-content {
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-xl);
  padding: 40rpx;
  max-height: 80vh;
  overflow-y: auto;
}

/* 模态框动画 */
@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: scale(0.8) translate(-50%, -60%);
  }
  to {
    opacity: 1;
    transform: scale(1) translate(-50%, -50%);
  }
}

.modal-title {
  margin-bottom: 30rpx;
  text-align: center;
}

.modal-body {
  margin-bottom: 30rpx;
}

.modal-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.modal-footer {
  display: flex;
}

/* 按钮样式扩展 */
.btn-secondary {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
}

/* 响应式设计 */
@media (max-width: 768px) {
  .page-content {
    padding: 20rpx;
  }
  
  .card {
    padding: 20rpx;
  }
  
  .section-title {
    font-size: 40rpx;
  }
  
  .record-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .record-type-icon {
    margin-bottom: 20rpx;
    width: auto;
    font-size: 32rpx;
  }
  
  .exchange-rule-card {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .exchange-rule-image {
    margin-bottom: 20rpx;
    width: 100rpx;
    height: 100rpx;
  }
  
  .exchange-rule-image image {
    width: 80rpx;
    height: 80rpx;
  }
  
  .exchange-rule-info {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .modal-container {
    width: 95%;
  }
  
  .modal-content {
    padding: 30rpx;
  }
  
  .balance-number {
    font-size: 48rpx;
  }
}

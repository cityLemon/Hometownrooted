/* record.wxss - 服务记录与兑换样式 */

/* CSS变量定义 */
page {
  --primary-color: #FF7800;
  --primary-light: #FF9A3C;
  --primary-lightest: #FFF4E6;
  --secondary-color: #FF9500;
  --accent-color: #FF7800;
  --success-color: #52C41A;
  --warning-color: #FAAD14;
  --error-color: #F5222D;
  --info-color: #1890FF;
  
  --text-primary: #262626;
  --text-secondary: #8C8C8C;
  --text-muted: #BFBFBF;
  
  --bg-primary: #FFFFFF;
  --bg-secondary: #F7F7F7;
  --bg-tertiary: #F0F0F0;
  
  --border-color: #D9D9D9;
  --divider-color: #F0F0F0;
  
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  
  --radius-xs: 8rpx;
  --radius-sm: 12rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-full: 50%;
  
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  --spacing-xxl: 64rpx;
  
  --font-size-xs: 22rpx;
  --font-size-sm: 24rpx;
  --font-size-base: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-xxl: 44rpx;
  
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  
  --line-height-tight: 1.2;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.75;
  
  --transition-base: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  --transition-fast: all 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 页面加载动画 */
.page-loader {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--bg-primary);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  transition: opacity 0.8s ease, visibility 0.8s ease;
}

.page-loader.hidden {
  opacity: 0;
  visibility: hidden;
}

.loader-spinner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 8rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

.loader-text {
  font-size: 28rpx;
  color: var(--text-primary);
  opacity: 0.8;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 1; }
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-primary);
  position: relative;
  z-index: 1;
}

/* 顶部状态栏占位 */
.status-bar-placeholder {
  height: 0;
  background-color: var(--primary-color);
}

/* 离线状态提示 */
.offline-tip {
  position: fixed;
  top: 88rpx;
  left: 0;
  right: 0;
  background-color: var(--warning-color);
  color: white;
  text-align: center;
  padding: var(--spacing-sm);
  font-size: var(--font-size-sm);
  z-index: 1000;
}

/* 页面内容 */
.page-content {
  padding: 30rpx;
  flex: 1;
  background-color: var(--bg-secondary);
}

/* 卡片样式 */
.card {
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

/* 区域标题 */
.section-title {
  margin-bottom: 30rpx;
  text-align: center;
}

/* 余额卡片样式 */
.balance-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.balance-title {
  margin-bottom: 20rpx;
}

.balance-content {
  display: flex;
  align-items: baseline;
  margin-bottom: 20rpx;
}

.balance-number {
  margin-right: 10rpx;
}

/* 搜索框样式 */
.search-bar {
  margin-bottom: 30rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
  padding: 20rpx;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background-color: var(--bg-tertiary);
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.search-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  color: var(--text-secondary);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
  background: transparent;
  border: none;
  outline: none;
}

.search-clear {
  font-size: 32rpx;
  color: var(--text-secondary);
  padding: 10rpx;
  cursor: pointer;
}

/* 记录类型切换样式 */
.record-type-tabs {
  display: flex;
  margin-bottom: 30rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.record-type-tab {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  transition: var(--transition-base);
}

.record-type-tab:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 服务记录列表样式 */
.record-list {
  margin-bottom: 40rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
  margin-bottom: 20rpx;
  transition: var(--transition-base);
}

.record-item:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.record-type-icon {
  font-size: 36rpx;
  font-weight: 700;
  margin-right: 30rpx;
  width: 120rpx;
  text-align: center;
}

.record-info {
  flex: 1;
}

.record-title {
  margin-bottom: 10rpx;
}

.record-time {
  margin-bottom: 5rpx;
}

/* 加载更多样式 */
.load-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.load-more-spinner {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 4rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  animation: spin 1s linear infinite;
  margin-right: 20rpx;
}

.load-more-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 28rpx;
  color: var(--text-muted);
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

/* 兑换规则网格 */
.exchange-rules-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: 20rpx;
  margin-bottom: 40rpx;
}

/* 兑换规则卡片样式 */
.exchange-rule-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
  transition: var(--transition-base);
}

.exchange-rule-card:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.exchange-rule-image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  background-color: var(--bg-secondary);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.exchange-rule-image image {
  width: 100rpx;
  height: 100rpx;
}

.exchange-rule-info {
  flex: 1;
  margin-right: 20rpx;
}

.exchange-rule-name {
  margin-bottom: 10rpx;
}

.exchange-rule-description {
  margin-bottom: 10rpx;
}

/* 导出区域 */
.export-section {
  margin-bottom: 40rpx;
}

/* 空状态样式 */
.empty-text {
  text-align: center;
  padding: 40rpx;
  color: var(--text-secondary);
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-sm);
}

/* 模态框样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 998;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 999;
  width: 90%;
  max-width: 600rpx;
  animation: modalFadeIn 0.3s ease;
}

.modal-content {
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-shadow: var(--shadow-lg);
  padding: 40rpx;
  max-height: 80vh;
  overflow-y: auto;
}

/* 模态框动画 */
@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: translate(-50%, -60%) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

.modal-title {
  margin-bottom: 30rpx;
  text-align: center;
}

.modal-body {
  margin-bottom: 30rpx;
}

.modal-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.modal-footer {
  display: flex;
}

/* 按钮样式扩展 */
.btn-secondary {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
}

.btn-large {
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .page-content {
    padding: 20rpx;
  }
  
  .card {
    padding: 20rpx;
  }
  
  .section-title {
    font-size: 40rpx;
  }
  
  .record-item {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .record-type-icon {
    margin-bottom: 20rpx;
    width: auto;
    font-size: 32rpx;
  }
  
  .exchange-rule-card {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .exchange-rule-image {
    margin-bottom: 20rpx;
    width: 100rpx;
    height: 100rpx;
  }
  
  .exchange-rule-image image {
    width: 80rpx;
    height: 80rpx;
  }
  
  .exchange-rule-info {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .modal-container {
    width: 95%;
  }
  
  .modal-content {
    padding: 30rpx;
  }
  
  .balance-number {
    font-size: 48rpx;
  }
  
  .search-bar {
    padding: 15rpx;
  }
  
  .search-input {
    font-size: 26rpx;
  }
}

/* 适配大屏幕 */
@media (min-width: 768px) {
  .exchange-rules-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* 适配超大屏幕 */
@media (min-width: 1024px) {
  .exchange-rules-grid {
    grid-template-columns: repeat(3, 1fr);
  }
}
/* pages/auth/login/login.wxss */

.auth-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-header {
  text-align: center;
  margin-bottom: 80rpx;
  margin-top: 60rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
  display: block;
}

.app-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.auth-form {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.password-input {
  position: relative;
}

.eye-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

.form-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.remember-me {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.remember-me checkbox {
  margin-right: 10rpx;
}

.forgot-password {
  font-size: 26rpx;
  color: #667eea;
  cursor: pointer;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 40rpx;
  transition: all 0.3s ease;
}

.login-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.3);
}

.login-btn[loading] {
  opacity: 0.7;
}

.register-section {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.register-link {
  color: #667eea;
  margin-left: 10rpx;
  cursor: pointer;
}

.quick-login {
  margin-top: 40rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.line {
  flex: 1;
  height: 2rpx;
  background: #e0e0e0;
}

.divider-text {
  font-size: 24rpx;
  color: #999;
  margin: 0 20rpx;
  white-space: nowrap;
}

.quick-login-options {
  display: flex;
  justify-content: space-around;
}

.quick-login-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.quick-login-item:hover {
  transform: scale(1.05);
}

.quick-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.quick-login-item text {
  font-size: 24rpx;
  color: #666;
}

/* 页面加载动画 */
.page-loader {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.page-loader.hidden {
  display: none;
}

.loader-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loader-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
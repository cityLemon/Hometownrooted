/* pages/auth/register/register.wxss */

.auth-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-header {
  text-align: center;
  margin-bottom: 60rpx;
  margin-top: 40rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
  display: block;
}

.app-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
}

.auth-form {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  max-height: 80vh;
  overflow-y: auto;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item.half {
  width: 48%;
  display: inline-block;
}

.form-item.half:nth-child(odd) {
  margin-right: 4%;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.password-input {
  position: relative;
}

.eye-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

/* 角色选择器 */
.role-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.role-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  min-width: 120rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  flex: 1;
}

.role-item.selected {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  color: white;
}

.role-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.role-name {
  font-size: 24rpx;
  text-align: center;
}

/* 选择器样式 */
.picker {
  width: 100%;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 30rpx;
  background: white;
}

.picker-content .placeholder {
  color: #999;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

/* 协议部分 */
.agreement-section {
  margin: 40rpx 0;
}

.agreement-label {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.agreement-label checkbox {
  margin-right: 10rpx;
}

.agreement-link {
  color: #667eea;
  margin: 0 5rpx;
}

/* 按钮样式 */
.register-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
}

.register-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.3);
}

.register-btn[disabled] {
  opacity: 0.6;
  cursor: not-allowed;
}

.login-section {
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.login-link {
  color: #667eea;
  margin-left: 10rpx;
  cursor: pointer;
}

/* 表单行 */
.form-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

/* 页面加载动画 */
.page-loader {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.page-loader.hidden {
  display: none;
}

.loader-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loader-text {
  font-size: 28rpx;
  color: #666;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
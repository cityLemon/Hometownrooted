/**profile.wxss - 健康档案管理样式**/

/* CSS变量定义 */
page {
  --primary-color: #FF7800;  /* 橙色主题 */
  --primary-light: #FF9A3C;
  --primary-lightest: #FFF4E6;
  --secondary-color: #FF9500;
  --accent-color: #FF7800;
  --success-color: #52C41A;
  --danger-color: #F5222D;
  --warning-color: #FAAD14;
  --info-color: #1890FF;
  
  --text-primary: #32325D;
  --text-secondary: #8898AA;
  --text-muted: #ADB5BD;
  
  --bg-primary: #FFFFFF;
  --bg-secondary: #F7F8FC;
  --bg-tertiary: #F4F5F7;
  
  --border-color: #E9ECEF;
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  
  --radius-xs: 8rpx;
  --radius-sm: 12rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-full: 50%;
  
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  --spacing-xxl: 64rpx;
  
  --font-size-xs: 22rpx;
  --font-size-sm: 24rpx;
  --font-size-base: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-xxl: 44rpx;
  
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;
  
  --line-height-tight: 1.2;
  --line-height-normal: 1.5;
  --line-height-relaxed: 1.75;
  
  --transition-base: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  --transition-fast: all 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 页面标题区域 */
.page-header {
  background-color: var(--primary-color);
  color: white;
  padding: 0rpx 30rpx 8rpx;
  text-align: center;
  position: relative;
  z-index: 1;
  margin-top: -10rpx; /* 与状态栏无缝衔接 */
}

.page-title {
  font-size: 28rpx;
  font-weight: normal;
}

/* 页面加载动画 */
.page-loader {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--bg-primary);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  transition: opacity 0.8s ease, visibility 0.8s ease;
}

.page-loader.hidden {
  opacity: 0;
  visibility: hidden;
}

.loader-spinner {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 8rpx solid var(--border-color);
  border-top-color: var(--primary-color);
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

.loader-text {
  font-size: 28rpx;
  color: var(--text-primary);
  opacity: 0.8;
  animation: pulse 1.5s ease-in-out infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes pulse {
  0%, 100% { opacity: 0.8; }
  50% { opacity: 1; }
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-primary);
  position: relative;
  z-index: 1;
}

/* 顶部状态栏占位 */
.status-bar-placeholder {
  height: 0; /* 移除状态栏占位 */
  background-color: var(--primary-color); /* 添加背景色 */
}

/* 离线状态提示 */
.offline-tip {
  position: fixed;
  top: 88rpx; /* 适配状态栏 */
  left: 0;
  right: 0;
  background-color: var(--warning-color);
  color: white;
  text-align: center;
  padding: var(--spacing-sm);
  font-size: var(--font-size-sm);
  z-index: 1000;
}



/* 页面内容 */
.page-content {
  padding: 30rpx;
  flex: 1;
  background-color: var(--bg-secondary);
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 快捷操作区 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  background: var(--bg-primary);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  box-shadow: var(--shadow-md);
}

.quick-action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.3s ease;
  border-radius: 12rpx;
  padding: 10rpx;
}

.quick-action-item:active {
  transform: scale(0.95);
  background-color: var(--bg-secondary);
}

.quick-action-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-bottom: 10rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.emergency-icon {
  background-color: rgba(245, 54, 92, 0.1);
}

.monitoring-icon {
  background-color: rgba(45, 206, 137, 0.1);
}

.service-icon {
  background-color: rgba(45, 100, 240, 0.1);
}

.share-icon {
  background-color: rgba(17, 205, 239, 0.1);
}

.quick-action-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  text-align: center;
}

/* 健康数据概览 */
.health-overview {
  background: var(--bg-primary);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-md);
  position: relative;
  overflow: hidden;
}

.health-overview::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--success-color));
}

.overview-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  text-align: center;
}

.overview-cards {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.overview-card {
  width: 48%;
  background-color: var(--bg-secondary);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  position: relative;
  transition: all 0.3s ease;
}

.overview-card:hover {
  transform: translateY(-5rpx);
  box-shadow: var(--shadow-md);
}

.overview-icon {
  width: 60rpx;
  height: 60rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  margin-right: 20rpx;
}

.blood-pressure-icon {
  background-color: rgba(245, 54, 92, 0.1);
}

.heart-rate-icon {
  background-color: rgba(245, 54, 92, 0.1);
}

.blood-sugar-icon {
  background-color: rgba(251, 99, 64, 0.1);
}

.weight-icon {
  background-color: rgba(17, 205, 239, 0.1);
}

.overview-info {
  flex: 1;
}

.overview-value {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.overview-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: 6rpx;
}

.overview-trend {
  font-size: 24rpx;
  font-weight: bold;
}

.trend-up {
  color: var(--danger-color);
}

.trend-down {
  color: var(--success-color);
}

.overview-note {
  font-size: 24rpx;
  color: var(--text-secondary);
  text-align: right;
  margin-top: 10rpx;
}

/* 就医记录 */
.medical-item {
  padding: 24rpx;
  background-color: var(--bg-secondary);
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  transition: all 0.3s ease;
}

.medical-item:active {
  background-color: var(--bg-tertiary);
}

.medical-date {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}

.medical-hospital {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.medical-diagnosis {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.medical-arrow {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: var(--text-muted);
}

.view-more {
  text-align: center;
  color: var(--primary-color);
  font-size: 28rpx;
  padding: 20rpx;
  margin-top: 10rpx;
}

/* 健康指标趋势图表 */
.chart-container {
  height: 400rpx;
  margin-top: 20rpx;
}

.health-chart {
  width: 100%;
  height: 100%;
}

.chart-legend {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.blood-pressure-color {
  background-color: rgba(245, 54, 92, 0.7);
}

.heart-rate-color {
  background-color: rgba(45, 100, 240, 0.7);
}

.blood-sugar-color {
  background-color: rgba(251, 99, 64, 0.7);
}

/* 编辑模式按钮 */
.edit-mode-buttons {
  margin-bottom: 30rpx;
  text-align: center;
}

/* 保存/取消按钮 */
.save-cancel-buttons {
  display: flex;
  margin-bottom: 30rpx;
}

/* 卡片样式 */
.card {
  background-color: var(--bg-primary);
  border-radius: 20rpx;
  box-shadow: var(--shadow-sm);
  padding: 30rpx;
  margin-bottom: 30rpx;
  border: 2rpx solid var(--border-color);
  transition: box-shadow 0.3s ease;
  position: relative;
  overflow: hidden;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  height: 6rpx;
  width: 0;
  background: linear-gradient(90deg, var(--primary-color), var(--success-color));
  transition: width 0.5s ease;
}

.card:hover::before {
  width: 100%;
}

/* 区域标题 */
.section-title {
  margin-bottom: 30rpx;
  text-align: center;
}

/* 表单样式 */
.form-item {
  margin-bottom: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
}

.form-label {
  margin-bottom: 12rpx;
  font-size: 36rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.form-value {
  font-size: 34rpx;
  color: var(--text-primary);
  background-color: var(--bg-secondary);
  padding: 24rpx;
  border-radius: 12rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 96rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.form-value:hover {
  background-color: var(--bg-tertiary);
  border-color: var(--border-color);
}

.form-input {
  width: 100%;
  padding: 24rpx;
  border: 3rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 34rpx;
  box-sizing: border-box;
  min-height: 96rpx;
  background-color: var(--bg-primary);
  color: var(--text-primary);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  outline: none;
}

.form-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 8rpx var(--primary-alpha-10);
}

.form-input::placeholder {
  color: var(--text-tertiary);
  opacity: 0.8;
}

/* 疾病记录样式 */
.disease-item {
  padding: 20rpx;
  background-color: var(--bg-secondary);
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.disease-name {
  margin-bottom: 10rpx;
}

.disease-detail {
  margin-top: 10rpx;
}

/* 用药记录样式 */
.medication-item {
  padding: 20rpx;
  background-color: var(--bg-secondary);
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.medication-name {
  margin-bottom: 10rpx;
}

.medication-detail {
  margin-top: 10rpx;
}

/* 编辑模式下的疾病管理样式 */
.disease-edit-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: var(--bg-secondary);
  border-radius: 8rpx;
}

.disease-edit-form {
  margin-bottom: 20rpx;
}

/* 编辑模式下的用药管理样式 */
.medication-edit-item {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: var(--bg-secondary);
  border-radius: 8rpx;
}

.medication-edit-form {
  margin-bottom: 20rpx;
}

/* 空状态样式 */
.empty-text {
  text-align: center;
  padding: 40rpx;
  color: var(--text-secondary);
}

/* 按钮样式扩展 */
.btn-secondary {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
}

.btn-danger {
  background-color: var(--error-color);
  color: white;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .page-content {
    padding: 20rpx;
  }
  
  .card {
    padding: 20rpx;
  }
  
  .form-item {
    margin-bottom: 20rpx;
  }
  
  .section-title {
    font-size: 40rpx;
  }
}

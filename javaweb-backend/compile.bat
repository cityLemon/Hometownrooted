@echo off
echo ========================================
echo 正在编译后端项目...
echo ========================================
cd /d "%~dp0"
call mvn clean package -DskipTests
if %errorlevel% equ 0 (
    echo ========================================
    echo 编译成功！
    echo ========================================
    echo.
    echo 请执行以下步骤：
    echo 1. 重启Tomcat服务器
    echo 2. 清除浏览器/小程序缓存
    echo 3. 重新测试
    echo ========================================
) else (
    echo ========================================
    echo 编译失败，请检查错误信息
    echo ========================================
)
pause

/* health-card.wxss - 健康卡片组件样式 */

/* 健康卡片基础样式 */
.health-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.health-card:active {
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-md);
}

/* 数据标签样式 */
.health-card-label {
  font-weight: 500;
  color: var(--text-primary);
  text-align: center;
}

/* 数据内容样式 */
.health-card-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 数据值样式 */
.health-card-value {
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 10rpx;
}

/* 数据单位样式 */
.health-card-unit {
  font-weight: 500;
  color: var(--text-secondary);
  margin-bottom: 20rpx;
}

/* 状态指示器样式 */
.health-card-status {
  font-weight: 700;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .health-card {
    min-height: 180rpx;
    padding: 25rpx;
  }
  
  .health-card-label {
    font-size: 30rpx;
  }
  
  .health-card-value {
    font-size: 50rpx;
  }
  
  .health-card-unit {
    font-size: 26rpx;
  }
  
  .health-card-status {
    font-size: 26rpx;
  }
}
